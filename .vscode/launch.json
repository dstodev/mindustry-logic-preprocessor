	"version": "0.2.0",
	"configurations": [
		{
			"name": "Main",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/main.py",
			"args": [
				"-f",
				"input.txt",
				"-o",
				"output.txt"
			],
			"presentation": {
				"group": "Launch"
			},
			"internalConsoleOptions": "openOnSessionStart",
			"console": "internalConsole"
		},
		{
			"name": "Python: Unit Tests",
			"type": "python",
			"request": "launch",
			"module": "unittest",
			"args": [
				"-v"
			],
			"presentation": {
				"group": "Test"
			},
			"internalConsoleOptions": "openOnSessionStart",
			"console": "internalConsole"
		}
	]
}
